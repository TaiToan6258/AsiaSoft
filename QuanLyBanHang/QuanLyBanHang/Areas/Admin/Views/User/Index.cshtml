@model PagedList.IPagedList<Model.EF.UserInfo>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Danh Sach";
    Layout = "\\Areas\\Admin\\Views\\Shared\\ViewPage1.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading" >
                Danh Sach Nguoi Dung
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Action</th>
                                <th>User Name</th>
                                <th>Adress</th>
                                <th>Email</th>
                                <th>Phone</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var item in Model)
                            {
                            <tr>
                                <td>
                                    <a href="/User/Edit/@item.Id">Edit</a>
                                    <a href="/User/Delete/@item.Id">Delete</a>
                                </td>
                                <td>@item.Username</td>
                                <td>@item.Address</td>
                                <td>@item.Email</td>
                                <td>@item.Phone</td>
                            </tr>
                                 }
                        </tbody>
                    </table>
                    @Html.PagedListPager(Model, page => Url.Action("Index", new {page}))

                </div>

            </div>
        </div>

    </div>


</div>